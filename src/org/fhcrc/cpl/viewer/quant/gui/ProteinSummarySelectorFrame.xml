<panel id="contentPanel" layout="GridBagLayout" minimumSize="800,300">
    <gridbagconstraints gridx="0" gridy="0" weightx="1" weighty="1" fill="GridBagConstraints.BOTH"
                        anchor="GridBagConstraints.FIRST_LINE_START"/>
    <panel id="summaryPanel" layout="GridBagLayout"
           minimumSize="400,60" maximumSize="1200,60">
        <gridbagconstraints gridx="0" gridy="0" weightx="1" weighty="1" fill="GridBagConstraints.HORIZONTAL"
                            anchor="GridBagConstraints.FIRST_LINE_START" gridwidth="GridBagConstraints.REMAINDER"/>
    </panel>


    <panel id="mainPanel" layout="GridBagLayout" minimumSize="800,400" preferredSize="800, 800">
        <gridbagconstraints weightx="1" weighty="3" fill="GridBagConstraints.BOTH"
                            anchor="GridBagConstraints.CENTER" gridwidth="GridBagConstraints.REMAINDER"/>
    </panel>

