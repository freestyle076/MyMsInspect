<panel id="contentPanel" minimumSize="350,150" preferredSize="350,150" constraints="BorderLayout.CENTER" layout="GridBagLayout" bundle="org.fhcrc.cpl.localization.MSInspectText">
    <gridbagconstraints id="gbc_global" insets="2,0,2,5"  anchor="GridBagConstraints.CENTER"/>
    <label text="MASS_TOLERANCE">
        <gridbagconstraints anchor="GridBagConstraints.LINE_END"/>
    </label>
    <textfield id="textDeltaMass" minimumsize="80,20" preferredsize="80,20">
        <gridbagconstraints anchor="GridBagConstraints.LINE_START"/>
    </textfield>
    <combobox id="comboBoxDaPpm">
        <gridbagconstraints anchor="GridBagConstraints.LINE_START"  gridwidth="GridBagConstraints.REMAINDER"/>
    </combobox>
    <label text="SCAN_SLASH_TIME_TOLERANCE">
        <gridbagconstraints anchor="GridBagConstraints.LINE_END"/>
    </label>
    <textfield id="textDeltaScanTime" minimumsize="80,20" preferredsize="80,20">
        <gridbagconstraints anchor="GridBagConstraints.LINE_START"/>
    </textfield>
    <combobox id="comboBoxScanTime">
        <gridbagconstraints anchor="GridBagConstraints.LINE_START" gridwidth="GridBagConstraints.REMAINDER"/>
    </combobox>


    <label text="MIN_MATCHED_FEATURES">
        <gridbagconstraints anchor="GridBagConstraints.LINE_END"/>
    </label>
    <textfield id="textMinMatchedFeatures" minimumsize="40,20" preferredsize="40,20">
        <gridbagconstraints anchor="GridBagConstraints.LINE_START"  gridwidth="GridBagConstraints.REMAINDER"/>
    </textfield>
    <label text="MIN_PERCENT_COVERAGE">
        <gridbagconstraints anchor="GridBagConstraints.LINE_END"/>
    </label>
    <textfield id="textMinPercentFeatureCoverage" minimumsize="40,20" preferredsize="40,20">
        <gridbagconstraints anchor="GridBagConstraints.LINE_START"  gridwidth="GridBagConstraints.REMAINDER"/>
    </textfield>


    <label text="MIN_PEPTIDE_PROPHET">
        <gridbagconstraints anchor="GridBagConstraints.LINE_END"/>
    </label>
    <textfield id="textMinPeptideProphet" minimumsize="60,20" preferredsize="60,20">
        <gridbagconstraints anchor="GridBagConstraints.LINE_START" gridwidth="GridBagConstraints.REMAINDER"/>
    </textfield>


    <button id="buttonCancel" text="Cancel">
	    <gridbagconstraints anchor="GridBagConstraints.LINE_START"/>
    </button>
    <button id="buttonOK" text="OK">
	    <gridbagconstraints anchor="GridBagConstraints.LINE_END" gridwidth="GridBagConstraints.REMAINDER"/>
    </button>
</panel>
